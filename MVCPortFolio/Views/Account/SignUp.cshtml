@model MVCPortFolio.Models.User

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Home/Login.cshtml";
}

<section class="site-wrapper">
    <div class="pt-table">

        <div class="pt-tablecell page-services relative">
            <a asp-area="" asp-controller="Account" asp-action="Login" class="page-close"><i class="tf-ion-arrow-return-left"></i></a>
            <div class="container">
                <div class="col-xs-12 col-lg-offset-1 col-lg-10">
                    <div class="page-title text-center">
                        <h2>Awesome <span class="primary">Services</span></h2>
                        <p>Claritas est etiam processus dynamicus, qui sequitur mutationem consuetudium lectorum. Mirum est notare quam littera gothica,quam nunc putamus parum claram anteposuerit.</p>
                    </div>

                    <div class="wrapper">
                        <form asp-action="SignUp" class="form-signin">
                            <h2 class="form-signin-heading">SignUp</h2>

                            <input asp-for="UserName" type="text" class="form-control" name="UserName"
                                   placeholder="UserName" autofocus="" />

                            <input asp-for="Email" type="email" class="form-control" name="Email"
                                   placeholder="Email" style="margin-bottom:0" />
                            <span asp-validation-for="Email" class="text-danger"></span>

                            <input asp-for="Password" type="password" class="form-control" name="Password" placeholder="Password" />

                            <div>
                                <button asp-controller="Account" asp-action="SignUp" class="btn btn-lg btn-primary btn-block" type="submit">Sign-Up</button>
                            </div>

                        </form>
                    </div>
                </div> <!-- /.col-xs-12 -->

            </div> <!-- /.container -->


            <nav class="page-nav clear">
                <div class="container">
                    <div class="flex flex-middle space-between">
                        @*todo : 이전 페이지 , 다음페이지 컨트롤페이지 넣어주기*@
                        <span class="prev-page"><a asp-area="" asp-controller="Board" asp-action="Index" class="link">&larr; BOARD Page</a></span>
                        <span class="copyright hidden-xs">Copyright &copy; 2016 Phantom, All Rights Reserved.</span>
                        <span class="next-page"><a asp-area="" asp-controller="Contact" asp-action="Index" class="link">CONTACT Page &rarr;</a></span>
                    </div>
                </div>
                <!-- /.page-nav -->
            </nav>
            <!-- /.container -->

        </div> <!-- /.pt-tablecell -->
    </div> <!-- /.pt-table -->
</section> <!-- /.site-wrapper -->
